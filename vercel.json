{
  "version": 2,
  "build": {
    "env": {
      "PUPPETEER_SKIP_DOWNLOAD": "true",
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  },
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/team",
      "dest": "/public/team.html"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|jpg|svg|gif|woff|woff2|ttf|eot|json))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}
